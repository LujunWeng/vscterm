{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"es2016"
		],
		"module": "commonjs",
		"outDir": "./out",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*"
	]
}
