{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es6",
			"es2015.promise"
		],
		"outDir": "./out",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"alwaysStrict": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*"
	]
}