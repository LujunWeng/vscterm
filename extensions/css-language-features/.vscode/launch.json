{
	"version": "0.2.0",
	"compounds": [
		{
			"name": "Debug Extension and Language Server",
			"configurations": ["Launch Extension", "Attach Language Server"]
		}
	],
	"configurations": [
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/client/out/**/*.js"],
			"smartStep": true,
			"preLaunchTask": "npm: compile"
		},
		{
			"name": "Launch Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}", "--extensionTestsPath=${workspaceFolder}/client/out/test" ],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/client/out/test/**/*.js"],
			"preLaunchTask": "npm: compile"
		},
		{
			"name": "Attach Language Server",
			"type": "node",
			"request": "attach",
			"protocol": "inspector",
			"port": 6044,
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/server/out/**/*.js"],
			"smartStep": true,
			"restart": true
		}
	]
}